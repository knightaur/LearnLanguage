<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Register as Trainee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTrainee" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/etPass"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etEmail" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="50dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:inputType="textEmailAddress"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="45dp" android:layout_marginStart="45dp"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etPass" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="50dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:inputType="textPassword"/>
    <Button
            android:text="Register as Trainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTrainer" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTrainee" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTrainer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/signIn">
        <TextView
                android:text="Already have an account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" tools:layout_editor_absoluteY="445dp"
                app:layout_constraintHorizontal_bias="0.496" android:textSize="13dp"/>
        <TextView
                android:text="Sign In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="445dp" android:textStyle="bold" android:textSize="13dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>